<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <me.xiaopan.sketchsample.widget.SampleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/image_installedApp_icon"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_installedApp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textStyle="bold"
            android:textColor="#CCFFFFFF"
            android:textSize="16sp"
            android:text="发顺丰就撒娇发牢骚 " />

        <TextView
            android:id="@+id/text_installedApp_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:textColor="#88FFFFFF"
            android:textSize="12sp"
            android:text="v1.2.0 | 2015-02-06" />
    </LinearLayout>
</LinearLayout>